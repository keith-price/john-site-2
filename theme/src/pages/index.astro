---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<section class="feature-card__section">
			<!-- <h2>About Planning Application Services</h2>
			<p>
				We are qualified in building services. We have over 30 years of
				experience in the building industry. We offer design advice, preparation
				and drawing of quality plans and the submission of Planning Applications
				to local authorities covering a wide region. We have experience with
				several planning authorities within the <strong
					>Yorkshire and Northeast regions.</strong
				>
			</p> -->
			<div class="feature-card__grid">
				<!-- <FeatureCard
					href="/company/about"
					title="Learn More"
					imgSrc="/assets/images/home/screenshots/company-about-crop-min"
				/> -->
				<div>
					<h2>About Us</h2>
					<p>
						We are qualified in building services and have over 30 years of
						experience in the building industry. We offer design advice,
						preparation and drawing of quality plans and the submission of
						Planning Applications to local authorities covering a wide region.
						We have experience with several planning authorities within the <strong
							>Yorkshire and Northeast regions.</strong
						>
						<br />
						<br />
						Learn more about <a href="/company/about">our services</a>
					</p>
				</div>
				<FeatureCard
					href="/company/about"
					title="Learn More"
					imgSrc="/assets/images/home/screenshots/company-about-crop-min"
				/>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2>Company Pages</h2>
			<p>
				Use one of our prebuilt company pages for your about page, contact page,
				legal pages, blog posts, etc.
			</p>
			<div class="feature-card__grid">
				<FeatureCard
					href="/company/about"
					title="About Page"
					imgSrc="/assets/images/home/screenshots/about"
				/>
				<FeatureCard
					href="/company/contact"
					title="Contact Page"
					imgSrc="/assets/images/home/screenshots/contact"
				/>
				<FeatureCard
					href="/blog/"
					title="Blog Page"
					imgSrc="/assets/images/home/screenshots/blog"
				/>
				<FeatureCard
					href="/blog/posts/remote-work-mental-health"
					title="Blog Post"
					imgSrc="/assets/images/home/screenshots/blog-post"
				/>
				<FeatureCard
					href="/company/legal"
					imgSrc="/assets/images/home/screenshots/legal"
					title="Legal Page"
				/>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2>Theme Pages</h2>
			<p>Learn more about how to set up and use the Odyssey Theme.</p>
			<div class="feature-card__grid">
				<FeatureCard
					href="/theme/get-started"
					imgSrc="/assets/images/home/screenshots/get-started"
					title="Get Started"
				/>
				<FeatureCard
					href="/theme/style-guide"
					imgSrc="/assets/images/home/screenshots/style-guide"
					title="Style Guide"
				/>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}

	.feature-card__grid p {
		max-width: 80%;
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
		.feature-card__grid p {
			max-width: 100%;
		}
	}
</style>
