---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<section class="feature-card__section">
			<div class="feature-card__grid">
				<div>
					<h2>About Us</h2>
					<p>
						We are qualified in building services and have over 30 years of
						experience in the building industry. We offer design advice,
						preparation and drawing of quality plans and the submission of
						Planning Applications to local authorities covering a wide region.
						We have experience with several planning authorities within the <strong
							>Yorkshire and Northeast regions.</strong
						>
						<br />
						<br />
						Learn more about <a href="/company/about">our services</a>
					</p>
				</div>
				<FeatureCard
					href="/company/about"
					title="Our Experience"
					imgSrc="/assets/images/home/screenshots/company-about-crop-min"
				/>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2 class="centered">Planning Application Project Stages</h2>
			<p class="centered">
				For more information on our bespoke design advice service and planning
				application submissions process please call John Irwin on 07562 724621
				or complete the <a href="/company/contact">Enquiry Form</a> here and we will
				respond as soon as possible.
			</p>
			<div class="feature-card__grid-alt">
				<FeatureCard
					href="/company/about"
					title="About Page"
					imgSrc="/assets/images/home/screenshots/about"
				/>
				<FeatureCard
					href="/company/contact"
					title="Contact Page"
					imgSrc="/assets/images/home/screenshots/contact"
				/>
				<FeatureCard
					href="/blog/"
					title="Blog Page"
					imgSrc="/assets/images/home/screenshots/blog"
				/>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2 class="centered">Additional Services Offered</h2>
			<p class="centered">Upon request we can quote for additional services.</p>
			<div class="feature-card__grid-alt">
				<FeatureCard
					href="/theme/get-started"
					imgSrc="/assets/images/home/screenshots/get-started"
					title="Get Started"
				/>
				<FeatureCard
					href="/theme/style-guide"
					imgSrc="/assets/images/home/screenshots/style-guide"
					title="Style Guide"
				/>
				<FeatureCard
					href="/theme/style-guide"
					imgSrc="/assets/images/home/screenshots/style-guide"
					title="Style Guide"
				/>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.centered {
		text-align: center;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
		margin-bottom: 6rem;
	}
	.feature-card__grid-alt {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: var(--theme-grid-gap);
		margin-bottom: 6rem;
	}

	.feature-card__grid p {
		max-width: 80%;
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
			margin-bottom: 0;
		}
		.feature-card__grid p {
			max-width: 100%;
		}
		.feature-card__grid-alt {
			grid-template-columns: repeat(1, 1fr);
		}
	}
</style>
