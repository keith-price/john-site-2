---
import { Container, FeatureCard } from '@littlesticks/odyssey-theme-components';

import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<!-- TODO: convert all images to webp for better performance -->
<Layout>
	<HomeHeroSection />

	<Container>
		<section class="feature-card__section">
			<h2 class="centered">Planning Application Project Stages</h2>
			<p class="centered">
				For more information on our bespoke design advice service and planning
				application submissions process please call John Irwin on 07562 724621
				or complete the <a href="/company/contact">Enquiry Form</a> here and we will
				respond as soon as possible.
			</p>
			<div class="feature-card__grid-alt">
				<picture>
					<img
						src="/assets/images/home/screenshots/house_with_tape-min.webp"
						alt=""
					/>
				</picture>
				<picture>
					<img
						src="/assets/images/home/screenshots/house_with_tape-min.webp"
						alt=""
					/>
				</picture>
				<picture>
					<img
						src="/assets/images/home/screenshots/house_with_tape-min.webp"
						alt=""
					/>
				</picture>
			</div>
		</section>
	</Container>

	<Container>
		<section class="feature-card__section">
			<h2 class="centered">Additional Services Offered</h2>
			<p class="centered">Upon request we can quote for additional services.</p>
			<div class="feature-card__grid-alt">
				<picture>
					<img
						src="/assets/images/home/screenshots/house_with_tape-min.webp"
						alt=""
					/>
				</picture>
				<picture>
					<img
						src="/assets/images/home/screenshots/house_with_tape-min.webp"
						alt=""
					/>
				</picture>
				<picture>
					<img
						src="/assets/images/home/screenshots/house_with_tape-min.webp"
						alt=""
					/>
				</picture>
			</div>
		</section>
	</Container>
	<Container>
		<!-- TODO: should the about section be here or at the top under the hero? -->
		<section class="about-section">
			<div class="about-left">
				<div>
					<h2>About Us</h2>
					<p>
						<strong>Planning Application Services</strong> are qualified in building
						services and have over 30 years of experience in the building industry.
						We offer design advice, preparation and drawing of quality plans and
						the submission of Planning Applications to local authorities covering
						a wide region. We have experience with several planning authorities within
						the <strong>Yorkshire and Northeast regions.</strong>
						<br />
						<br />
						Learn more about <a href="/company/about">our services</a> here.
					</p>
				</div>
			</div>
			<div class="about-right">
				<picture>
					<!-- TODO: need to set alt tags for all images -->
					<img src="/assets/images/home/screenshots/john-pic-min.webp" alt="" />
				</picture>
			</div>
		</section>
	</Container>
</Layout>

<style>
	.about-section {
		display: flex;
		justify-content: center;
		gap: 3rem;
		margin-bottom: 6rem;
	}
	.about-left {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		max-width: 50%;
	}
	.about-left p {
		max-width: 80%;
	}
	.about-right {
		max-width: 50%;
	}
	.about-right img {
		width: 100%;
		height: auto;
		border-radius: var(--theme-shape-radius);
	}
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__section img {
		border-radius: var(--theme-shape-radius);
	}
	.centered {
		text-align: center;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
		margin-bottom: 6rem;
	}
	.feature-card__grid-alt {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: var(--theme-grid-gap);
		margin-bottom: 6rem;
	}

	.feature-card__grid p {
		max-width: 80%;
	}
	@media (max-width: 768px) {
		.about-section {
			display: flex;
			flex-direction: column;
			margin-bottom: 3rem;
			gap: 1rem;
		}
		.about-left {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			max-width: 100%;
		}
		.about-left p {
			max-width: 100%;
		}
		.about-right {
			max-width: 100%;
		}

		.feature-card__grid {
			grid-template-columns: 1fr;
			margin-bottom: 0;
		}
		.feature-card__grid p {
			max-width: 100%;
		}
		.feature-card__grid-alt {
			grid-template-columns: repeat(1, 1fr);
		}
	}
</style>
